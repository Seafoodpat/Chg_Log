<%= render 'search' %>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Chq number</th>
      <th>Chq date</th>
      <th>Payee Name</th>
      <th>Category</th>
      <th>Deal</th>
      <th>Particular</th>
      <th>Salesperson</th>
      <th>Currencies</th>
      <th>Amount</th>
      <th>Prepared by</th>
      <th>Sign chq date</th>
      <th>Chq Presented date</th>
      <% if not current_user.viewer? %>
        <th colspan="3"></th>
      <% else %>
      <th colspan="1"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @logs.each do |log| %>
      <tr>
        <td><%= log.chq_number %></td>
        <td><%= log.chq_date %></td>
        <td><%= log.payee_name %></td>
        <td><%= log.category %></td>
        <td><%= log.deal_id %></td>
        <td><%= log.particular %></td>
        <td><%= log.salesperson %></td>
        <td><%= log.currencies %></td>
        <td><%= number_to_currency(log.amount, :unit => "") %></td>
        <td><%= log.prepared %></td>
        <td><%= log.sign_date %></td>
        <td><%= log.present_date %></td>
        
        <td>
          <%= link_to log, class: 'btn btn-success btn-xs', 'data-no-turbolink' => true do %>
            <span class="glyphicon glyphicon-eye-open"></span>
          <% end %>
        </td>

        <% if not current_user.viewer? %>
          <td>
            <%= link_to edit_log_path(log), class: 'btn btn-warning btn-xs', 'data-no-turbolink' => true do %>
              <span class="glyphicon glyphicon-edit"></span>
            <% end %>
          </td>

          <td>
            <%= link_to log, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' do %>
              <span class="glyphicon glyphicon-trash"></span>
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<div>
   <%= will_paginate @logs, renderer: BootstrapPagination::Rails %>
</div>